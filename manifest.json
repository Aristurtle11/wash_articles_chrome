{
  "manifest_version": 3,
  "name": "Wash Articles Extension",
  "description": "在网页中提取正文与图片，为后续翻译和发布流程做准备。",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.realtor.com/news/*"
  ],
  "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.realtor.com/news/*"
      ],
      "js": [
        "src/content/extractor.js",
        "src/content/content_script.js",
        "src/content/ui.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Wash Articles 预览"
  }
}
